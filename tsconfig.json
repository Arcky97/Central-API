{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],
    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
